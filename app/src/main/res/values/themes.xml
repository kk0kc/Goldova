<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FintechFilms" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_20</item>
        <item name="colorPrimaryVariant">@color/blue_20</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:fontFamily">@font/roboto</item>-->
    </style>
    <style name="rounded_corner">
        <item name="cornerSize">5dp</item>
    </style>
    <style name="RoundedCornerButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textAppearance">@font/roboto</item>
        <item name="android:backgroundTint">@color/blue_20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundedCornerButtonLight" parent="RoundedCornerButton">
        <item name="android:backgroundTint">@color/blue_10</item>
        <item name="android:textColor">@color/blue_20</item>
    </style>


</resources>
